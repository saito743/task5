<% if @model == 'user' %>
  <table class="table">
  	<thead>
  	  <tr>
  		<th>Image</th>
		<th>Name</th>
		<th colspan="3"></th>
	  </tr>
  	</thead>
		<% @datas.each do |user| %>
	  	<tr>
	  		<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: 'no-image-mini.jpg') %></td>
	  		<td><%= user.name %></td>
	<% end %>
<% else %>
	<table class="table">
	  	<thead>
	  	  <tr>
	  		<th></th>
			<th>Title</th>
			<th colspan="3">Opinion</th>
		  </tr>
	  	</thead>
		  <% @datas.each do |book| %>
			<tr>
			  <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: 'no-image-mini.jpg') %></td>
			  <td><%= book.title %></td>
			  <td><%= book.body %></td>
	<% end %>
<% end %>
